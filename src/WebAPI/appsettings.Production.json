{
  "ConnectionStrings": {
    "DefaultConnection": "Server=tcp:sqordia-server.database.windows.net,1433;Initial Catalog=sqordiadb;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;User Id=${DB_USERNAME};Password=${DB_PASSWORD};"
  },
  "JwtSettings": {
    "Secret": "${JWT_SECRET}",
    "Issuer": "Sqordia",
    "Audience": "SqordiaUsers",
    "ExpirationInMinutes": 60
  },
  "GoogleOAuth": {
    "ClientId": "${GOOGLE_OAUTH_CLIENT_ID}",
    "ClientSecret": "${GOOGLE_OAUTH_CLIENT_SECRET}",
    "RedirectUri": "${GOOGLE_OAUTH_REDIRECT_URI}"
  },
  "AI": {
    "DefaultProvider": "openai",
    "FallbackProviders": ["claude", "azureopenai", "gemini"],
    "OpenAI": {
      "ApiKey": "${OPENAI_API_KEY}",
      "Model": "gpt-4",
      "MaxTokens": 2000
    },
    "Claude": {
      "ApiKey": "${CLAUDE_API_KEY}",
      "Model": "claude-3-sonnet-20240229",
      "MaxTokens": 2000
    },
    "Gemini": {
      "ApiKey": "${GEMINI_API_KEY}",
      "Model": "gemini-pro",
      "MaxTokens": 2000
    },
    "AzureOpenAI": {
      "Endpoint": "${AZURE_OPENAI_ENDPOINT}",
      "ApiKey": "${AZURE_OPENAI_API_KEY}",
      "DeploymentName": "gpt-4",
      "MaxTokens": 2000
    }
  },
  "SendGrid": {
    "ApiKey": "${SENDGRID_API_KEY}",
    "FromEmail": "${SENDGRID_FROM_EMAIL}",
    "FromName": "Sqordia"
  },
  "AzureStorage": {
    "ConnectionString": "${AZURE_STORAGE_CONNECTION_STRING}",
    "ContainerName": "documents"
  },
  "Security": {
    "MaxFailedLoginAttempts": 5,
    "LockoutDurationMinutes": 15
  },
  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "ClientIdHeader": "X-ClientId",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*:/api/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "*:/api/auth/register", 
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "*:/api/auth/forgot-password",
        "Period": "1m", 
        "Limit": 3
      },
      {
        "Endpoint": "*:/api/auth/reset-password",
        "Period": "1m",
        "Limit": 3
      },
      {
        "Endpoint": "*:/api/auth/send-verification-email",
        "Period": "1m",
        "Limit": 2
      },
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "*",
        "Period": "1h",
        "Limit": 1000
      }
    ]
  },
  "IpRateLimitPolicies": {
    "IpRules": []
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  }
}